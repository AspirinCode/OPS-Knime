<knimeNode icon="./default.png" type="Source">
    <name>OPS_pathway</name>
    
    <shortDescription>
        Returns information about a single pathway that corresponds to {uri}.
    </shortDescription>
    
    <fullDescription>
        <intro> WikiPathways is an open, collaborative platform dedicated to the curation of biological pathways. </intro>
        
        
       <option name="Server URL"> Location of the openphacts services</option>
        <option name="App ID">Your application ID</option>
        <option name="App KEY">Your application key</option>
        <option name="Your query">A Pathway URI. e.g.: http://rdf.wikipathways.org/WP1019_r48131 </option>
    </fullDescription>
    
    <ports>
           <!-- possibly more input ports here-->
        <outPort index="0" name="Out-Port name">Table with columns: identifier, title_en, title, description and organism_type</outPort>
        <outPort index="1" name="Out-Port name">Table with part-of relations in the found path</outPort>
        <!-- possibly more output ports here-->
    </ports>    
    <views>
        <view index="0" name="name of first view">Description of first view...</view>
        <!--view index="1" name="name of second view">Description of second view...</view-->
    </views>
